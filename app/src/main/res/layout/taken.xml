<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buttonLayout"
    style="?android:attr/buttonBarStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:divider="?android:dividerHorizontal"
    android:dividerPadding="8dp"
    android:showDividers="middle"
    android:gravity="center|top"
    android:visibility="gone">

    <Button
        android:id="@+id/MBTITOAST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What MBTI Type are You?"
        android:onClick="myersBriggsToast"
        style="?android:attr/borderlessButtonStyle" />


    <Button
        android:id="@+id/POKEMONTOAST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What Is Your Spirit Pokemon?"
        android:onClick="spiritPokemonToast"
        style="?android:attr/borderlessButtonStyle" />

    <Button
        android:id="@+id/MONEYTOAST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Will You Give Patrick and Torry $5?"
        android:onClick="moneyToast"
        style="?android:attr/borderlessButtonStyle" />

</LinearLayout>